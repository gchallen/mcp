{
  "name": "@geoffreychallen/mcp",
  "private": true,
  "version": "2025.8.0",
  "description": "Geoffrey Challen's Personal MCP Server",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0 <24.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --inspect -r dotenv/config src/index.ts",
    "dev:break": "tsx --inspect-brk watch -r dotenv/config src/index.ts",
    "build": "tsc && npm run copy-static",
    "copy-static": "mkdir -p dist/static && cp -r src/static/* dist/static/",
    "lint": "eslint src/",
    "test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --disable-warning=ExperimentalWarning' jest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tsc": "tsc --noEmit",
    "check": "npm run format && npm run lint && npm run tsc",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t geoffreychallen/mcp:$(node -p \"require('./package.json').version\") -t geoffreychallen/mcp:latest .",
    "docker:build:load": "docker buildx build --platform linux/amd64,linux/arm64 --load -t geoffreychallen/mcp:$(node -p \"require('./package.json').version\") -t geoffreychallen/mcp:latest .",
    "docker:push": "docker buildx build --platform linux/amd64,linux/arm64 --push -t geoffreychallen/mcp:$(node -p \"require('./package.json').version\") -t geoffreychallen/mcp:latest .",
    "docker:push:version": "docker push geoffreychallen/mcp:$(node -p \"require('./package.json').version\")",
    "docker:push:latest": "docker push geoffreychallen/mcp:latest",
    "k8s:restart": "kubectl rollout restart deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen",
    "k8s:edit": "kubectl edit deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen",
    "k8s:logs": "kubectl logs deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen --follow",
    "k8s:logs:tail": "kubectl logs deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen --tail=100",
    "k8s:status": "kubectl get deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen -o wide",
    "k8s:describe": "kubectl describe deployment/mcp-geoffreychallen-com-deployment -n geoffreychallen",
    "k8s:pods": "kubectl get pods -l app=mcp-geoffreychallen-com -n geoffreychallen"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@types/content-type": "1.1.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "jest": "30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "29.4.1",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.3",
    "@redis/client": "5.8.1",
    "cors": "2.8.5",
    "dotenv": "17.2.1",
    "express": "5.1.0",
    "raw-body": "3.0.0"
  },
  "overrides": {
    "@types/express": "5.0.3",
    "@types/express-serve-static-core": "5.0.2"
  }
}
